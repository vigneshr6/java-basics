<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">

        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
        </http>

        <format>
            <label>
                <pattern>app=java-basics, level=%level, class=%logger</pattern>

                <resource>
                    <labels>
                        <spring.application.name>app</spring.application.name>
                    </labels>
                </resource>
            </label>

            <message>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %logger{40} - %msg%n</pattern>
            </message>

        </format>

        <batch>
            <batchSize>100</batchSize>  <batchTimeoutMs>5000</batchTimeoutMs> </batch>

    </appender>
    <logger name="org.springframework" level="ERROR"/>
    <logger name="io" level="INFO"/>
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="LOKI" />
    </root>
</configuration>
